(defpoll timer :interval "1s" `scripts/timer`)
(defvar timers '["5", "9"]')
(defvar show_set_timers false)
(defvar show_set_custom_timer false)

(defwidget timerstuff []
    (box
        :class "stuff timerstuff"
        :vscroll true
        :orientation "h"
		:space-evenly true
     ;;   :spacing "110"

        :halign "start"
        :width 315


        (show_set_timers)

        (box :orientation "v"
            :halign "end"
            (for time in {timer}
                (eventbox
                    :onscroll "bash ${EWW_CONFIG_DIR}/scripts/timer up '${time.file}'"
                    :onclick "bash ${EWW_CONFIG_DIR}/scripts/timer up '${time.file}'"
                    :onrightclick "bash ${EWW_CONFIG_DIR}/scripts/timer down '${time.file}'"
                    :onmiddleclick "bash ${EWW_CONFIG_DIR}/scripts/timer delete '${time.file}'"
                    (label :halign "end" :class "timer" :text "${time.timer}")
                )
            )
        )
    )
)

(defwidget show_set_timers []
	(eventbox
	    :onhover "eww update show_set_timers=true"
        :onhoverlost "eww update show_set_timers=false"
        :height 10

        (box
            :orientation "h"
            :space-evenly "false"
            :spacing "2"

            (revealer
                :class "timer_buttons"
                :transition "slideleft"
                :reveal {!show_set_custom_timer && !show_set_timers}
                :duration "550ms"

                (label :halign "center" :style "font-size: 27px; padding-left:10px;" :text "Û∞Å´" )
            )

            (revealer
                :transition "slideleft"
                :reveal {show_set_timers}
                :duration "550ms"

              (box :class "timer_buttons"
                   :orientation "h"
                   :space-evenly true
                   :halign "start"
                   :spacing 10

                    (for timer in {timers}
                        (button :valign "start" :class "set_timer" :onclick "timer ${timer}" {timer})
                    )
                    (box :class "set_custom_timer_box"
                         :space-evenly true

                         (input :class "set_custom_timer" :value "15" :onaccept "timer {}")
                    )
              )
            )
        )
	)
)
